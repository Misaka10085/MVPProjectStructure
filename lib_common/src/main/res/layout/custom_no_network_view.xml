<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_network_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/no_network_retry_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@mipmap/ic_no_network" />

    <TextView
        android:id="@+id/no_network_view_tv"
        style="@style/MultipleStatusView.Content"
        android:layout_below="@id/no_network_retry_view"
        android:layout_marginTop="12dp"
        android:text="@string/string_no_network"
        android:textSize="15sp" />
</RelativeLayout>