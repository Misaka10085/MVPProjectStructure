<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资源服务器地址:" />

            <TextView
                android:id="@+id/default_res_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@color/color_999999"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="@string/string_use_default"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/default_res_url_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_default_res_url" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Global ResUrl:" />

            <EditText
                android:id="@+id/res_global_url_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:text="http://"
                android:textSize="15sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>