<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <com.misakanetwork.mvpprojectstructure.widget.ImageViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/guideGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/status_bar_v"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/titleTb"
            style="@style/TitleBarTheme">

            <TextView
                android:id="@+id/title_center_tv"
                style="@style/TitleCenterTv"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/title_right_tv"
                style="@style/TitleBarRightTvStyle"
                android:textColor="@color/white" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
</RelativeLayout>